#user-profile-wrapper
  max-width: 650px
  min-height: 100%
  padding-top: 24px
  margin: 0 auto

  h2
    display: inline-block

  img
    float: left

  .name
    padding-left: 140px

  .pillbox
    overflow: hidden
    span
      background: #DEDEDC
      border-radius: 6px
      display: inline-block
      float: right
      margin-left: 6px
      padding: 6px 12px
      a
        display: inline-block
        margin-left: 6px
    .tags
      border: 1px solid black
    input
      float: left